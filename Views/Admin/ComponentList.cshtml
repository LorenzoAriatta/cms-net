@{
    var componentList = ViewData["componentList"] as List<string>;
}

<h1>Component List</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Component Name</th>
            <th scope="col">Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (string component in componentList)
        {
            <tr>
               
                <td>@component</td>
                <td><a href="@Url.Action("InstallComponent", "Admin", new {name = component})">Installa</a> | <a href="@Url.Action("UninstallComponent", "Admin", new {name = component})">Disinstalla</a></td>
            </tr>
        }
    </tbody>
</table>